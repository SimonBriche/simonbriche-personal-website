doctype html
html
  head
    //-global configuration
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, shrink-to-fit=no")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="keywords", content="keywords")
    meta(name="theme-color" content="#ff2b20")

    link(rel="icon", type="image/x-icon", href=`${cdnURL}/assets/images/favicon.ico`)
    link(rel="preconnect" href="https://fonts.gstatic.com")
    link(href="https://fonts.googleapis.com/css2?family=Source+Code+Pro&family=Ubuntu:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet")

    link(href=`${cdnURL}/assets/css/fontawesome.min.css` rel="stylesheet")
    link(href=`${cdnURL}/assets/css/brands.min.css` rel="stylesheet")
    link(href=`${cdnURL}/assets/css/solid.min.css` rel="stylesheet")

    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")

    link(href=`${cdnURL}/assets/css/all.css`, rel='stylesheet', type='text/css')

    if reactApp && reactApp.css
      !=reactApp.css

    //-meta SEO/OG
    include includes/seo-meta

    //-extra css specific to some pages
    block pagecss

  body(class=bodyClass)
    include includes/header

    //-page content
    block content
    
    include includes/footer
    
    //-extra content that have to be outside the page skeleton for some pages (like modals)
    block page-outer-content
    
    //-global js files that need to be loaded in every pages
    include includes/js

    //-extra js specific to some pages
    block pagejs